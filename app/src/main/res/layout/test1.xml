<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    android:gravity="center"

    tools:context=".test">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post/Article"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="50sp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:id="@+id/t1"
        android:hint="Please choose a title"/>

    <EditText
        android:id="@+id/t4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:hint="Please choose a description" />
    <TextView
        android:id="@+id/t5554"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="follow this format 'yyyy-mm_dd"


        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/t5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Please choose a date" />
    <TextView
        android:id="@+id/t555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a category"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="18sp"
         />
    <CheckBox
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocalNews" />

    <CheckBox
        android:id="@+id/t88"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WorldNews" />



    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:text="Add new post"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:padding="20dp"
        android:text="POST LIST"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl"
        android:layout_marginTop="20dp"
        android:text=""/>

    <Button
        android:id="@+id/b17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/victore_button"

        android:text="Go Back"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="30sp"
         />





</androidx.appcompat.widget.LinearLayoutCompat>